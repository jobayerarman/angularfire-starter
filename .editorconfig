# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
max_line_length = 100
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.sh]
indent_size = 2

[*.{html,njk}]
indent_size = 2

[*.{js,ts,json}]
indent_size = 2

[*.{css,styl,scss,less,sass}]
indent_size = 2

[*.php]
indent_size = 4

[*.md]
max_line_length = off
indent_style = tab
trim_trailing_whitespace = false
